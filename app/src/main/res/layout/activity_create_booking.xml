<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vuthy.workplease.CreateBooking">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ថ្ងៃ​កក់ចេញដំណើរ"
                android:textSize="18dp"/>
            <EditText
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:drawablePadding="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:hint="25 វិច្ឆិកា 2017"
                android:paddingLeft="25dp"
                android:textSize="18dp"
                android:id="@+id/booking_date"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ម៉ោង​កក់"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:hint="01:00pm"
                android:paddingLeft="25dp"
                android:textSize="18dp"
                android:id="@+id/booking_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="គោលដៅ"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:paddingLeft="25dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ពី:"
                        android:textSize="18dp"/>
                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="57dp"
                        android:spinnerMode="dialog"
                        android:id="@+id/stating_station"
                        android:entries="@array/station_array"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ទៅ:"
                        android:textSize="18dp"
                        />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="57dp"
                        android:spinnerMode="dialog"
                        android:id="@+id/ending_station"
                        android:entries="@array/station_array"></Spinner>
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ចំនួន​កៅអី"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/number_of_seat"
                    android:layout_weight="0.5"
                    android:entries="@array/number_of_seat_array"></Spinner>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="320dp"
                    android:layout_height="57dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    android:background="#BE4248"
                    android:textAlignment="center"
                    android:text="កក់"
                    android:id="@+id/submit"
                                       />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
