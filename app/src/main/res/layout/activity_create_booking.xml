<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vuthy.workplease.CreateBooking">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ថ្ងៃ​កក់ចេញដំណើរ"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/booking_date"
                android:hint="25/Nov/2017"
                android:layout_centerHorizontal="true"
                android:editable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ម៉ោង​កក់"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="01:00pm"
                android:id="@+id/booking_time"
                android:layout_centerHorizontal="true"
                android:editable="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ពី:"/>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/stating_station"
                    android:entries="@array/station_array"></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ទៅ:"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/ending_station"
                    android:entries="@array/station_array"></Spinner>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ចំនួន​កៅអី"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:spinnerMode="dialog"
                android:id="@+id/number_of_seat"
                android:entries="@array/number_of_seat_array"></Spinner>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="កក់"
                    android:id="@+id/submit"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
